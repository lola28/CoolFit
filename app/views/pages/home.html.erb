<h1>Top categories</h1>

<br>

<h3> <%= @top_category1.description %></h3>

<div class="cards" id="landing">
  <% @top_category1.activities.each do |activity| %>

      <div class="card-landing">
        <% if activity.photo_db.nil? %>
          <%= cl_image_tag activity.photo_user, crop: :fill, gravity: :face, class: 'card-landing-img' %>
        <% else %>
          <%= image_tag activity.photo_db, crop: :fill, gravity: :face, class: 'card-landing-img' %>
        <% end %>
        <div class="card-landing-infos">
          <p><%= activity.name %></p>
          <p><%= image_tag activity.user.avatar, class: 'avatar' %></p>
          <p>
            <% activity.fitness_level.times.each do |level|%>
              <i class="fas fa-running"></i>
            <% end %>
          </p>
        </div>
      </div>
  <% end %>
</div>

