<h1 class="home-title">Hot categories</h1>
<br>
<br>



<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong><%= @advice %></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>


<div class="d-flex justify-content-start" style= "margin-bottom:10px">
 <%= image_tag @top_category1.logo, class: 'category-logo'%>
 <h3><%= @top_category1.description %></h3>
</div>

<div class="cards" id="landing">
  <% @top_category1.activities.each do |activity| %>
    <% unless activity.time.to_date.past? %>
      <%= link_to activity do %>
        <div class="card-landing zoom">
          <% if activity.photo_db.nil? %>
            <%= cl_image_tag activity.photo_user, crop: :fill, gravity: :face, class: 'card-landing-img' %>
          <% else %>
            <%= image_tag activity.photo_db, crop: :fill, gravity: :face, class: 'card-landing-img' %>
          <% end %>
          <div class="card-landing-infos">
            <div class="card-landing-name">
              <p><strong><%= activity.name %></strong></p>
            </div>
            <div class="d-flex justify-content-between">
              <div class="d-flex justify-content-start">
                <% activity.owner.average_owner_rating.times.each do |rate| %>
                  <i class="fas fa-star" style="color:#FA9800;"></i>
                  <% end %>
                  <% activity.owner.star_to_5.times.each do |rate| %>
                  <i class="fas fa-star" style="color:#C8C8C8;"></i>
                <% end %>
              </div>
              <div class="d-flex justify-content-end">
                <% activity.fitness_level.times.each do |level|%>
                  <i class="fas fa-running"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

