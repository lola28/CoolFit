<%= simple_form_for(activity) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, class: "form-control" %>
  </div>

  <div class="form-inputs">
    <%= f.input :category, collection: Category.all, class: "form-control" %>
  </div>

  <div class="form-inputs">
    <%= f.input :location, class: "form-control" %>
  </div>

  <div class="form-inputs">
    <%= f.input :fitness_level, class: "form-control" %>
  </div>

  <div class="form-inputs">
    <%= f.input :time, class: "form-control" %>
  </div>

  <div class="form-inputs">
    <%= f.input :duration, class: "form-control" %>
  </div>

  <div class="form-inputs">
    <%= f.input :description, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
