<div class="navbar navbar-expand-sm navbar-light navbar-coolfit">
  <%= link_to "CoolFit", root_path, class: "navbar-logo" %>

    <div class="navbar flex flex-horizontal-center">
      <%= form_tag '#', method: :get, style:"width:100%" do %>
        <ul>
          <li class="navitem">
            <%= text_field_tag :location_query,
              params[:location_query], class: "form-control",
              placeholder: "Type in your address...", class: "navbar-search" %>
          </li>
          <li class="navitem">
            <%= text_field_tag :activity_query,
              params[:activity_query], class: "form-control",
              placeholder: "Type in the type of activity...", class: "navbar-search" %>
            <%= submit_tag 'Search!', class: "btn btn-search-navbar" %>
          </li>
        </ul>
      <% end %>
    </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <% if current_user.nil? %>
          <%= link_to "Sign in", new_user_session_path, class: "btn sign-in-btn" %>
        <% else %>
          <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "My organized events", dashboard_owner_path, class: "dropdown-item" %>
            <%= link_to "My profile", profile_path, class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        <% end %>
      </li>
    </ul>
  </div>
</div>

