<div class="navbar navbar-expand-sm navbar-coolfit d-flex justify-content-between">
  <div class="navbar-left">
    <div class="navbar d-flex justify-content-between">
      <div><%= link_to "CoolFit", root_path, class: "navbar-logo" %> </div>
      <div><%= form_tag activities_path, method: :get, style:"width:100%" do %>
        <ul>
          <li class="navitem">
            <%= text_field_tag :location_query,
              params[:location_query], class: "form-control",
              placeholder: "Type in your address...", class: "navbar-search" %>
          </li>
          <li class="navitem">
            <%= text_field_tag :activity_query,
              params[:activity_query], class: "form-control",
              placeholder: "Type in the type of activity...", class: "navbar-search" %>
          </li>
          <%= submit_tag 'Search!', class: "btn btn-search-navbar" %>
        </ul>
      <% end %>
      </div>
    </div>
  </div>

  <div class="navbar-right">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto navbar-right">
        <li class="nav-item dropdown">
          <%= link_to "Browse", activities_path, class: "btn sign-in-btn", style: "text-decoration: none;" %>
          <% if current_user.nil? %>
            <%= link_to "Sign up", new_user_session_path, class: "btn sign-in-btn" %>
          <% else %>
            <%= render 'shared/avatar_dropdown' %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.professional == false %>
                <%= link_to "My dashboard", dashboard_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "My organized events", owner_dashboard_path(current_user), class: "dropdown-item" %>
              <%= link_to "My profile", profile_path, class: "dropdown-item" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

