<div class="card-dashboard d-flex" data-future-activities-id="<%= activity.id %>">

  <%= render 'shared/card_index', activity: activity %>

  <div class="card-btns">
    <% if current_user == @user %>
      <%= link_to "Edit", edit_activity_path(activity), class: 'btn admin-btn' %>
      <%= link_to "Delete", activity_path(activity), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: 'btn admin-btn' %>
    <% end %>
  </div>
</div>
