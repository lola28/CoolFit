<div class="d-flex justify-content-between">
  <h1>Welcome <span class="banner-logo"><%= current_user.username %></span>!</h1>
  <%= render 'shared/avatar_large' %>
</div>

<h5>My fitness level: <%= current_user.physical_activity %></h5>
<h5>My description: <%= current_user.description %></h5>

<br>

<div>
  <h3>Upcoming events</h3>

  <div class="future-bookings">
    <% @future_bookings.each do |activity| %>
      <%= render 'bookings/future_bookings', activity: activity %>
    <% end %>
  </div>
</div>

<br>

<div>
  <h3>My <i class="fa fa-heart"></i> events</h3>

  <div class="interests">
    <% @interests.each do |activity| %>
      <%= render 'interests/interests', activity: activity %>
    <% end %>
  </div>
</div>

<br>

<div>
  <h3>Past events</h3>

   <div class="past-bookings">
    <% @past_bookings.each do |booking| %>
      <%= render 'bookings/past_bookings', booking: booking %>
      <%#= render 'bookings/rating', activity: activity %>
    <% end %>

      <%#= simple_form_for (@activity, html: {class: "booking_form"}, :url => activity_booking_path, method: :patch) %>
      <%#= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", id: "booking_rating" %>
  </div>
</div>
