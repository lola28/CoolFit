<div class="d-flex justify-content-between">
  <h1>Welcome <span class="banner-logo"><%= current_user.username %></span>!</h1>
  <img class="avatar-large mr-4 mt-2" alt="avatar-large" src="<%= current_user.avatar %>" />
</div>

<h5>My fitness level: <%= current_user.physical_activity %></h5>
<h5>My description: <%= current_user.description %></h5>

<br>

<div>

  <h3>My events</h3>

  <% @user_activities.each do |activity| %>
    <div class="card-dashboard">
      <div class="card-index cards-index">
        <% if activity.photo_db.nil? %>
          <%= cl_image_tag activity.photo_user, crop: :fill, gravity: :face, class: 'card-index-img' %>
        <% else %>
          <%= image_tag activity.photo_db, crop: :fill, gravity: :face, class: 'card-index-img' %>
        <% end %>

        <div class="card-index-infos">
            <h3><%= activity.name %></h3>
        </div>
      </div>

      <div class="card-btns">
        <%= link_to "Edit", edit_activity_path(activity), class: 'btn admin-btn' %>
        <%= link_to "Delete", activities_path(activity), method: :delete, class: 'btn admin-btn' %>
      </div>
    </div>
  <% end %>

</div>

<br>

<div>

  <h3>Upcoming activities</h3>

  <% @future_user_bookings.each do |activity| %>
    <div class="card-dashboard">
      <div class="card-index cards-index">
        <% if activity.photo_db.nil? %>
          <%= cl_image_tag activity.photo_user, crop: :fill, gravity: :face, class: 'card-index-img' %>
        <% else %>
          <%= image_tag activity.photo_db, crop: :fill, gravity: :face, class: 'card-index-img' %>
        <% end %>

        <div class="card-index-infos">
            <h3><%= activity.name %></h3>
        </div>
      </div>

      <div class="card-btns">
        <%= link_to "Unregister", activity_booking_path(activity), method: :delete, class: 'btn admin-btn' %>
      </div>
    </div>
  <% end %>

</div>

<br>

<div>
  <h3>Past activities</h3>

  <% @past_user_bookings.each do |activity| %>
    <div class="card-dashboard">
      <div class="card-index cards-index">
        <% if activity.photo_db.nil? %>
          <%= cl_image_tag activity.photo_user, crop: :fill, gravity: :face, class: 'card-index-img' %>
        <% else %>
          <%= image_tag activity.photo_db, crop: :fill, gravity: :face, class: 'card-index-img' %>
        <% end %>

        <div class="card-index-infos">
            <h3><%= activity.name %></h3>
        </div>
      </div>

      <div class="card-btns">
        <p>Rate your experience</p>
        <!-- ADD LINK TO INPUT RATING HERE -->
      </div>

    </div>
  <% end %>

</div>
